extends ../layout/main

block variables
  - var page = 'member';
  - var title = '編輯會員資料';
  - var description = 'Description for Webpack + Pug';
  - var pageClass = 'index-page';

block content
  // begin::Container
  #kt_content_container.container-xxl
    // begin::Table
    .card.card-custom.mt-6.mt-xl-9
      //- // begin::Card header
      //- .card-header.mt-5.border-0
      //-   // begin::Card title
      //-   .card-title.flex-column
      //-     h3.fw-bolder.mb-1 #{title}
      //-     //- .fs-6.text-gray-400 Total $260,300 sepnt so far
      //- // end::Card header
      // begin::Card body
      .card-body
        .row.justify-content-center
          .col-lg-8
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 密碼
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='', placeholder="輸入舊密碼")
              .col-lg-9.mt-3.ml-auto
                input.form-control.form-control-solid(type='text', value='', placeholder="輸入新密碼")
              .col-lg-9.mt-3.ml-auto
                input.form-control.form-control-solid(type='text', value='', placeholder="確認新密碼")
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 匿稱
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='Alex', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 姓名
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='Alex', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 生日
              .col-lg-9
                input.form-control.form-control-solid.datepicker.w-100(type='text', readonly, placeholder="Select date")
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 性別
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='男', disabled)
            .form-group.row
              .col-lg-3
                label.col-form-label
                  span 電話
              .col-lg-9
                input.form-control.form-control-solid(type='text', value='0912345678', disabled)
            #kt_repeater_3
              .form-group.row.mb-0
                .col-lg-3
                  label.col-form-label
                    span 地址
                .col-lg-9(data-repeater-list)
                  .form-group.form-row(data-repeater-item)
                    .col
                      input.form-control.form-control-solid(type='text', value="")
                    .col-auto
                      a.btn.font-weight-bold.btn-danger.btn-icon(href='javascript:;', data-repeater-delete)
                        i.la.la-remove
              .form-group.row
                .col-lg-3
                .col
                  .btn.font-weight-bold.btn-primary(data-repeater-create)
                    i.la.la-plus
                    |Add
        .row
          .col-auto.ml-auto
            button.btn.btn-light-primary 確認儲存


block script
  scrupt(src="/assets/js/pages/crud/forms/widgets/form-repeater.js")
  script.
    $('#kt_repeater_3').repeater({
      initEmpty: false,

      defaultValues: {
          'text-input': '123'
      },

      show: function() {
          $(this).slideDown();
      },

      hide: function(deleteElement) {
          if(confirm('Are you sure you want to delete this element?')) {
              $(this).slideUp(deleteElement);
          }
      }
    });
    $('.datepicker').datepicker({
      todayHighlight: true,
      orientation: "bottom left",
      format: "yyyy/mm/dd",
    });